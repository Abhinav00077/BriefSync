{
  "name": "briefsync",
  "version": "1.0.0",
  "description": "AI-powered smart news aggregator and summarizer using LangChain, MCP server architecture, and Ollama",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "keywords": [
    "news",
    "ai",
    "summarizer",
    "mcp",
    "langchain",
    "ollama"
  ],
  "author": "BriefSync Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^0.0.32",
    "@langchain/openai": "^0.0.21",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "langchain": "^0.1.13",
    "natural": "^6.10.4",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
